from tkinter import *

# Tạo cửa sổ window
window = Tk()
window.title("Welcome to LikeGeeks app")  # Tiêu đề cửa sổ
window.geometry('350x200')  # Kích thước cửa sổ

# Thêm Label vào cửa sổ
lbl = Label(window, text="Hello")
lbl.grid(column=0, row=0)

# Hàm xử lý sự kiện khi nút được nhấn
def clicked():
    lbl.configure(text="Button was clicked !!")  # Thay đổi nội dung của Label

# Thêm Button vào cửa sổ
btn = Button(window, text="Click Me", command=clicked, bg="blue", fg="white")  # Nút có màu nền và chữ
btn.grid(column=1, row=0)

# Bắt đầu vòng lặp sự kiện của tkinter
window.mainloop()
